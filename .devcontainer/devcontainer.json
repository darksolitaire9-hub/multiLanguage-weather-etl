{
  "name": "Multi-Language Weather ETL",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "REditorSupport.r",
        "julialang.language-julia",
        "ms-toolsai.jupyter",
        "github.vscode-pull-request-github"
      ]
    }
  },
  
  "forwardPorts": [8080],
  
  "portsAttributes": {
    "8080": {
      "label": "Airflow Web UI",
      "onAutoForward": "notify"
    }
  },
  
  "postCreateCommand": "echo 'âœ… Environment ready! Activate with: source .venv/bin/activate'",
  
  "containerEnv": {
    "LANG": "C.UTF-8",
    "LC_ALL": "C.UTF-8"
  }
}
