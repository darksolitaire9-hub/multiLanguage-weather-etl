{
  "name": "Multi-Language Weather ETL",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
  "workspaceFolder": "/workspaces/multiLanguage-weather-etl",
  "remoteUser": "vscode",

  "containerEnv": {
    "DEBIAN_FRONTEND": "noninteractive",
    "AIRFLOW_HOME": "/workspaces/multiLanguage-weather-etl/airflow",
    "PYTHONUNBUFFERED": "1"
  },

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "REditorSupport.r",
        "julialang.language-julia",
        "GitHub.copilot",
        "eamodio.gitlens",
        "charliermarsh.ruff",
        "ms-python.debugpy"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "[julia]": {
          "editor.defaultFormatter": "julialang.language-julia",
          "editor.formatOnSave": true
        },
        "julia.environmentPath": "${workspaceFolder}",
        "julia.useRevise": false,
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": ["tests"]
      }
    }
  },

  "onCreateCommand": "bash .codespaces/setup.sh",
  "postCreateCommand": "",
  "postStartCommand": "source /workspaces/multiLanguage-weather-etl/.venv/bin/activate && echo 'âœ… Python venv activated'",

  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "Airflow UI",
      "onAutoForward": "notify"
    }
  }
}
