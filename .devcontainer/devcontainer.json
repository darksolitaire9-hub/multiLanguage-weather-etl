{
  "name": "Multi-Language Weather ETL",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "workspaceFolder": "/workspaces/multiLanguage-weather-etl",
  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "REditorSupport.r",
        "julialang.language-julia",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "GitHub.copilot",
        "eamodio.gitlens",
        "charliermarsh.ruff"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "[julia]": {
          "editor.defaultFormatter": "julialang.language-julia",
          "editor.formatOnSave": true
        },
        "julia.environmentPath": "${workspaceFolder}",
        "jupyter.kernels.filter": ["julia", "python3", "ir"]
      }
    }
  },

  "postCreateCommand": "bash .codespaces/setup.sh",
  "postStartCommand": "echo 'âœ… Setup complete! Activate venv with: source .venv/bin/activate' && echo 'Then start Airflow: airflow standalone'",

  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "Airflow UI",
      "onAutoForward": "notify"
    }
  }
}
